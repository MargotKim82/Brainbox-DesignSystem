# gitignore 파일 생성
$ npx add-gitignore storybookjs,react,yarn

# 저장소 초기화
$ git init

# git이 관리할 대상으로 파일 등록
$ git add .

# 파일상태 확인
$ git status

# 변경 내역에 대한 메모와 함께 커밋
$ git commit -m "init commit"

# 원격 저장소 추가
$ git remote add origin [원격저장소 주소]

# 연결된 저장소 확인
$ git remote -v

# 현재 브랜치 이름 확인
$ git branch

# 원격 저장소 origin에 master 브랜치를 푸시한다.
$ git push -u origin master
